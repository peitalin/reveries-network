
# default recipe to display help information
default:
  @just --list

# Run runtime crate
run-runtime:
    cargo run --bin runtime


# Runs node 1
run-node1:
    echo 'Running Node 1';
    cargo run --bin rpc -- \
        --secret-key-seed 1 \
        --generate-agent-secret true \
        --topics chat,topic_switch \
        --rpc-port 8001

# Runs node 2
run-node2:
    @echo 'Running Node 2';
    cargo run --bin rpc -- \
        --secret-key-seed 2 \
        --topics chat,topic_switch \
        --rpc-port 8002

# Runs node 3
run-node3:
    @echo 'Running Node 3';
    cargo run --bin rpc -- \
        --secret-key-seed 3 \
        --topics chat,topic_switch \
        --rpc-port 8003

# Runs node 4
run-node4:
    @echo 'Running Node 4';
    cargo run --bin rpc -- \
        --secret-key-seed 4 \
        --topics chat,topic_switch \
        --rpc-port 8004

# Runs node 5
run-node5:
    @echo 'Running Node 5';
    cargo run --bin rpc -- \
        --secret-key-seed 5 \
        --topics chat,topic_switch \
        --rpc-port 8005

broadcast:
    @echo 'Broadcasting on Node 1';
    cargo run --bin cmd -- \
        --rpc-server-address 0.0.0.0:8001 \
        broadcast \
        --agent-name beatrix \
        --agent-nonce 0 \
        --shares 3 \
        --threshold 2

respawn:
    @echo 'Respawning on Node 2 (new vessel)';
    cargo run --bin cmd -- \
        --rpc-server-address 0.0.0.0:8002 \
        respawn \
        --agent-name beatrix \
        --agent-nonce 0

get-kfrag-peers:
    @echo 'Respawning on Node 2 (new vessel)';
    cargo run --bin cmd -- \
        --rpc-server-address 0.0.0.0:8002 \
        get-kfrag-peers \
        --agent-name beatrix \
        --agent-nonce 0


topic-switch:
    @echo 'Topic Switch to Node 1';
    cargo run --bin cmd -- \
        --rpc-server-address 0.0.0.0:8001 \
        topic-switch \
        --next-agent-name beatrix \
        --next-agent-nonce 0 \
        --total-frags 3 \
        --threshold 2 \
        --prev-agent-name beatrix \
        --prev-agent-nonce  0 \
        --peer-id 12D3KooWPjceQrSwdWXPyLLeABRXmuqt69Rg3sBYbU1Nft9HyQ6X

run-cait:
    cargo run --release --bin cait -- 100 300 1000000




peers1:
    cargo run --bin cmd -- \
        --rpc-server-address 0.0.0.0:8001 \
        get-kfrag-broadcast-peers \
        --agent-name beatrix \
        --agent-nonce 0

peers2:
    cargo run --bin cmd -- \
        --rpc-server-address 0.0.0.0:8002 \
        get-kfrag-broadcast-peers \
        --agent-name beatrix \
        --agent-nonce 0


peers3:
    cargo run --bin cmd -- \
        --rpc-server-address 0.0.0.0:8003 \
        get-kfrag-broadcast-peers \
        --agent-name beatrix \
        --agent-nonce 0

peers4:
    cargo run --bin cmd -- \
        --rpc-server-address 0.0.0.0:8004 \
        get-kfrag-broadcast-peers \
        --agent-name beatrix \
        --agent-nonce 0